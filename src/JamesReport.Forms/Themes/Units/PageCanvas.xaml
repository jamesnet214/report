<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:JamesReport.Forms.UI.Units">

    <Style TargetType="{x:Type units:PageCanvas}">
        <Setter Property="BorderBrush" Value="#000000"/>
        <Setter Property="BorderThickness" Value="0.51"/>
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:PageCanvas}">
                    <Border>
                        <ScrollViewer>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                     MinWidth="700" MaxWidth="900"
                                    VerticalAlignment="Top"
                                    Margin="20">
                                <Viewbox Stretch="UniformToFill">
                                    <Canvas Width="793.44" Height="1122.24">
                                        <units:Header Canvas.Top="50"
                                                      Canvas.Left="300"/>
                                        <units:HorizontalLine Width="700" Canvas.Top="100"/>
                                        <units:Table Width="700" Canvas.Top="150"/>
                                    </Canvas>
                                </Viewbox>
                            </Border>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
