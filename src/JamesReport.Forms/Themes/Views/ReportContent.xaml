<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infra="clr-namespace:Infragistics.Controls.Editors;assembly=Infragistics.WPF.Controls.Editors.XamPropertyGrid"
    xmlns:views="clr-namespace:JamesReport.Forms.UI.Views"
    xmlns:units="clr-namespace:JamesReport.Forms.UI.Units">
    
    <Style TargetType="{x:Type views:ReportContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ReportContent}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <units:ItemsList ItemsSource="{Binding Tools}"/>
                            <Border Grid.Column="1" 
                                    Background="#DFDFDF"/>
                            <units:PageCanvas Grid.Column="1"/>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <infra:XamPropertyGrid SelectedObject="{Binding SelectedObject}"/>
                                <units:PropertyGrid Grid.Row="1" DataContext="{Binding SelectedObject}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
